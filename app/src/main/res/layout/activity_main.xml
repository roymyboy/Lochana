<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cameraDividerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cameraDividerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resizeHandleTouchArea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/resizeHandle"
                android:layout_width="84dp"
                android:layout_height="10dp"
                android:background="@drawable/resize_handle_background"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- YOLOv11 Detection Overlay -->
    <com.lochana.app.DetectionOverlayView
        android:id="@+id/detectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cameraContainer"
        app:layout_constraintEnd_toEndOf="@id/cameraContainer"
        app:layout_constraintStart_toStartOf="@id/cameraContainer"
        app:layout_constraintTop_toTopOf="@id/cameraContainer" />

    <!-- Description Overlay - Positioned below camera -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cameraDividerGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:fillViewport="true"
                android:scrollbars="vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/chatContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/promptRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/captureModeContainer"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:backgroundTint="@android:color/transparent"
                    app:boxBackgroundColor="@color/mode_selector_background"
                    app:boxStrokeColor="@color/mode_selector_stroke"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false"
                    app:endIconMode="none">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/captureModeDropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:dropDownVerticalOffset="8dp"
                        android:ellipsize="end"
                        android:maxWidth="120dp"
                        android:inputType="none"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="16dp"
                        android:drawableEnd="@drawable/ic_dropdown_arrow"
                        android:drawablePadding="4dp"
                        android:minWidth="0dp"
                        android:popupBackground="@drawable/mode_dropdown_popup"
                        android:text="@string/mode_analysis"
                        android:textColor="@color/mode_selector_text"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/etPrompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:hint="Type your prompt..."
                    android:textColor="@color/white"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="16sp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="4"
                    android:minLines="1"
                    android:gravity="start|top"
                    android:scrollHorizontally="false"
                    android:textIsSelectable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:cursorVisible="true"
                    android:longClickable="true"
                    android:layout_marginEnd="12dp" />

                <ImageButton
                    android:id="@+id/btnMic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Voice input"
                    android:src="@drawable/ic_mic"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    app:tint="#FFFFFF" />

                <ImageButton
                    android:id="@+id/btnCapture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Capture frame for analysis"
                    android:padding="0dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Focus Indicator -->
    <View
        android:id="@+id/focusIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/focus_indicator"
        android:visibility="gone"
        android:alpha="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>